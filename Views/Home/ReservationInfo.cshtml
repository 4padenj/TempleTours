@{ 
}
@model Reservation


<div class="form-group">
    <form asp-action="ReservationInfo" method="post" class="form-group">
        <label asp-for="GroupName">Group Name:</label>
        <input asp-for="GroupName" />
        <br />

        <label asp-for="GroupSize">Group Size:</label>
        <input asp-for="GroupSize" />
        <br />

        <label asp-for="ContactEmail">Email Address:</label>
        <input asp-for="ContactEmail" />
        <br />

        <label asp-for="ContactPhone">Phone Number:</label>
        <input asp-for="ContactPhone" />

        <input type="hidden" asp-for="Time" value="@ViewBag.Time"/>

        <button type="submit" class="btn btn-primary">Book Appointment</button>

    </form>
    <div asp-validation-summary="All"></div>
</div>

