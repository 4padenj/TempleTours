@{ 
}
@model ReservationFormViewModel


<div>
    <form asp-action="ReservationInfo" method="post">
        <label asp-for="@Model.Reservation.GroupName">Group Name:</label>
        <input asp-for="@Model.Reservation.GroupName" />
        <br />

        <label asp-for="@Model.Reservation.GroupSize">Group Size:</label>
        <input asp-for="@Model.Reservation.GroupSize" />
        <br />

        <label asp-for="@Model.Reservation.ContactEmail">Email Address:</label>
        <input asp-for="@Model.Reservation.ContactEmail" />
        <br />

        <label asp-for="@Model.Reservation.ContactPhone">Phone Number:</label>
        <input asp-for="@Model.Reservation.ContactPhone" />

        <input type="hidden" asp-for="@Model.Reservation.Time" value="@Model.Tour"/>

        <button type="submit">Book Appointment</button>

    </form>
    <div asp-validation-summary="All"></div>
</div>

